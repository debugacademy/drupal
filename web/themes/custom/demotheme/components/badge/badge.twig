<div{{ attributes.addClass('demotheme-badge') }}>
  <div class="demotheme-badge__container">
    {% if icon %}
      <div class="demotheme-badge__icon">
        {{ source(componentMetadata.path ~ '/icons/' ~ icon|default('knife') ~ '.svg') }}
      </div>
    {% endif %}
    {% if label %}
      <div class="demotheme-badge__label">{{~ label ~}}</div>
    {% endif %}
    {% block text %}{% endblock %}
  </div>
</div>
